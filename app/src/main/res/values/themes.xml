<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.WikiTopics" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mariner</item>
        <item name="colorPrimaryVariant">@color/havelockBlue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mariner</item>
        <item name="colorSecondaryVariant">@color/havelockBlue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status & navigation bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/surface</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>